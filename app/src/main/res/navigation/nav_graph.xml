<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.jokenpo.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_playerFragment"
            app:destination="@id/navigation" />
    </fragment>
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/playerFragment">
        <fragment
            android:id="@+id/resultFragment"
            android:name="com.example.jokenpo.fragments.ResultFragment"
            android:label="fragment_result"
            tools:layout="@layout/fragment_result" />
        <fragment
            android:id="@+id/playerFragment"
            android:name="com.example.jokenpo.fragments.PlayerFragment"
            android:label="fragment_player"
            tools:layout="@layout/fragment_player" />
    </navigation>
</navigation>